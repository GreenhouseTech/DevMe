//- seo.pug

block seo
    //- SEO Start
    meta(name="author", content="Binyamin Green")
    meta(name="description", content=site_desc)
    if url
        link(rel="canonical", href=url)
        
    meta(property="og:type", content="website")
    if url
        meta(property="og:url", content=url)
    meta(property="og:site_name", content="DevMe")
    if page_title
        meta(property="og:title", content= page_title + ' | ' + site_title)
    else
        meta(property="og:title", content=site_title)
    meta(property="og:description", content=site_desc)
    meta(property="og:image", content="https://devme.netlify.com/assets/post-square.png")

    meta(property="twitter:card", content="summary_large_image")
    if url
        meta(property="twitter:url", content=url)
    meta(property="twitter:site", content="@GetDevMe")
    meta(property="twitter:creator", content="@binyamingreen")
    if page_title
        meta(property="twitter:title", content= page_title + ' | ' + site_title)
    else
        meta(property="twitter:title", content=site_title)
    meta(property="twitter:description", content=site_desc)
    meta(property="twitter:image", content="https://devme.netlify.com/assets/post-small.png")
    //- SEO End