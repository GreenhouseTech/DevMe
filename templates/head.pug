//- head.pug

block head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    if page_title
        title #{page_title} - #{site_title}
    else
        title= site_title
    link(rel="shortcut icon", href="/assets/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat&display=swap")
    
    //- Chatra Live Chat
    link(rel="preconnect", href="https://call.chatra.io")
    script(async).
        window.ChatraSetup = {
            colors: {
                buttonText: '#F5F9FC',
                buttonBg: '#58B27D'
            }
        };
    <!-- Chatra {literal} -->
    script.
        (function(d, w, c) {
            w.ChatraID = 'jQ24baZt2q7Lp7Mr5';
            var s = d.createElement('script');
            w[c] = w[c] || function() {
                (w[c].q = w[c].q || []).push(arguments);
            };
            s.async = true;
            s.src = 'https://call.chatra.io/chatra.js';
            if (d.head) d.head.appendChild(s);
        })(document, window, 'Chatra');
    <!-- /Chatra {/literal} -->

    //- Google Analytics
    unless page_profile
        script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-119385435-5")
        link(rel="preconnect" href="https://www.googletagmanager.com")
        link(rel="preconnect" href="https://www.google-analytics.com")
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-119385435-5');
            
    link(rel="preconnect", href="https://widget.yeps.io")
    <!-- Yeps {literal} -->
    script.
        (function (y, e, p) {
            e.YepsID = 'Yp3vFpaQD2CuT3q2C';
            var s = y.createElement('script');
            e[p] = e[p] || function() {
                (e[p].q = e[p].q || []).push(arguments);
            };
            s.async = true;
            s.src = 'https://widget.yeps.io/yeps.js';
            if (y.head) y.head.appendChild(s);
        })(document, window, 'Yeps');
    <!-- /Yeps {/literal} -->