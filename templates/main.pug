    body(class="page-wrapper " + body_class)
        header.page-header
            a(href="/").page-header__logo
                img(src="/assets/wordmark.svg" alt="Home").page-header__logo-img
            a(href="#", role="button", hidden, aria-hidden=true, aria-label="Toggle Menu", aria-controls="nav")#hamburger.hamburger.js-hamburger
                span.hamburger__bar
                span.hamburger__bar
                span.hamburger__bar
            nav#nav.nav-wrapper.js-nav-wrapper
                a(href="/about.html").nav__link About
                a(href="/open.html").nav__link Open
                a(href="/legal.html").nav__link Legal
        block content
        footer.page-footer
            hr
            small.copyright Copyright 2019 by Greenhouse Tech
            .page-footer__social
                a.social__link(href="mailto:getdevme@gmail.com", rel="external nofollow", aria-label="Email Us")
                    include ../assets/icon/email.svg
                a.social__link(href="https://github.com/greenhousetech/devme", rel="external nofollow", aria-label="Find us on GitHub")
                    include ../assets/icon/github.svg
                a.social__link(href="https://twitter.com/getdevme", rel="external nofollow", aria-label="Find us on Twitter")
                    include ../assets/icon/twitter.svg