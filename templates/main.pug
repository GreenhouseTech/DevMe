//- main.pug

block variables
    - var body_class = ""
    - var site_title = "DevMe - A Universal Profile for Developers"
    - var site_desc = "All your socials on one Page. Stay tuned for updates."

doctype html
html(lang="en")
    head
        include ../templates/seo.pug
        block head
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            meta(http-equiv="X-UA-Compatible", content="ie=edge")
            if page_title
                title #{page_title} | DevMe - A Universal Profile for Developers
            else
                title DevMe - A Universal Profile for Developers
            link(rel="shortcut icon", href="/assets/favicon.ico", type="image/x-icon")
            link(rel="stylesheet", href="/css/style.min.css")
            script(defer, src="/js/bundle.min.js")
            link(rel="stylesheet", async, href="https://fonts.googleapis.com/css?family=Montserrat&display=swap")
            
                        //- Chatra Live Chat
            script(async).
                window.ChatraSetup = {
                    colors: {
                        buttonText: '#F5F9FC',
                        buttonBg: '#58B27D'
                    }
                };
            <!-- Chatra {literal} -->
